<h1>Editing Book</h1>
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <p>
      <strong>Title</strong>
    </p>
      <%= f.text_field :title %>
    <p>
      <strong>Body</strong>
    </p>
      <%= f.text_area :body %>
    <div><%= f.submit 'Update Book' %></div>
    <a><%= link_to "Show", book_path(@book.id)%></a>
    |
    <a><%= link_to "Back", book_path %></a>

  <% end %>