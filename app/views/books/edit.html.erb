<h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <% if @book.errors.count == 1 %>
      <%= @book.errors.count %> error prohibited this book from being saved:
    <% else %>
      <%= @book.errors.count %> errors prohibited this book from being saved:
    <% end %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @book, local: true, url: book_path(@book.id), method: :patch do |f| %>
    <p>
      <strong>Title</strong>
    </p>
      <%= f.text_field :title %>
    <p>
      <strong>Body</strong>
    </p>
      <%= f.text_area :body %>
    <div><%= f.submit 'Update Book' %></div>
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
  <% end %>